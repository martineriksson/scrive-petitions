
.grid_8.create

  %h1 Create a new petition

  %form{ :method => "post", :action => "/create", :enctype => "multipart/form-data" }

    %h3 Title
    %input{ :name => "title" }

    %h3 Description
    %textarea{ :name => "description" }
    
    %h3 PDF file
    %input{ :name => "file", :type => "file" }

    %p
      %input{ :type => 'submit' }